<Page x:Class="ПР6.PageAuto"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ПР6"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageAuto">

    <Grid>
        <StackPanel>
            <StackPanel>
                <TextBlock Text="Авторизация"/>
            </StackPanel>
            <StackPanel>
                <GroupBox Header="Введите логин">
                    <TextBox Name="autoLogin"/>
                </GroupBox>
                <GroupBox Header="Введите пароль">
                    <PasswordBox Name="autoPassword"/>
                </GroupBox>
            </StackPanel>
            <Button Name="btn_Auto" Content="Войти" Click="btn_Auto_Click" Template="{StaticResource CTButon2}" Width="150" Height="40"/>
            </StackPanel>
    </Grid>
</Page>
