<Page x:Class="ПР6.page.PageAdvertisement"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ПР6.page"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="800"
      Title="PageAdvertisement">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0">
            <TextBlock Name="tbSlogan" Text="КРАСОТА СТАЛА ДОСТУПНЕЕ" FontSize="20" Margin="5" HorizontalAlignment="Center" FontFamily="Comic Sans MS"/>
        </StackPanel>
        <StackPanel Grid.Row="1">
            <TextBlock Name="tbSkidka" Text="скидка на косметику 40%" FontSize="40" Margin="5" HorizontalAlignment="Center" FontFamily="Comic Sans MS"/>
        </StackPanel>
        <StackPanel Grid.Row="2">
            <Button Name="btn" Content="Получить скидку" Template="{StaticResource Button}" Background="#F679FF"/>
        </StackPanel>
        <StackPanel Grid.Row="3">
            <Image Name="image" Source="/image/w.png" Width="400"/>
        </StackPanel>
    </Grid>
</Page>
